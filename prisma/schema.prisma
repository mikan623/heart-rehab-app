  email          String   @unique
  name           String?
  password       String?  // ãƒ¡ãƒ¼ãƒ«ç™»éŒ²ãƒ¦ãƒ¼ã‚¶ãƒ¼ç”¨ï¼ˆãƒãƒƒã‚·ãƒ¥åŒ–ï¼‰
  authType       String   @default("line")  // "line" ã¾ãŸã¯ "email"
  lineConnected  Boolean  @default(false)  // ğŸ†• LINE é€£æºçŠ¶æ…‹
  lineUserId     String?  @unique          // ğŸ†• LINE Messaging API ãƒ¦ãƒ¼ã‚¶ãƒ¼ID
  selfLinkCode   String?  @unique          // ğŸ†• æœ¬äººç”¨æ‹›å¾…ã‚³ãƒ¼ãƒ‰ï¼ˆå…¬å¼ã‚¢ã‚«ã¨ã®ã²ã‚‚ä»˜ã‘ç”¨ï¼‰
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // ãƒªãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
  profiles      Profile[]
  healthRecords HealthRecord[]
  familyMembers FamilyMember[]
  familyInvites FamilyInvite[]
  
  @@map("users")
