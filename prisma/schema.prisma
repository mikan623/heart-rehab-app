model Profile {
  id               String   @id @default(cuid())
  userId           String
  displayName      String?
  age              Int?
  gender           String?
  height           Float?
  targetWeight     Float?
  diseases         String[]
  riskFactors      String[]
  medications      String?
  physicalFunction String?
  emergencyContact String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("profiles")
}

model HealthRecord {
  id                    String   @id @default(cuid())
  userId                String   @map("user_id")
  date                  String   @db.Text
  time                  String
  bloodPressureSystolic Int      @map("blood_pressure_systolic")
  bloodPressureDiastolic Int     @map("blood_pressure_diastolic")
  pulse                 Int?
  weight                Float?
  exercise              Json?    // { type: string, duration: string }
  meal                  Json?    // { staple: string[], mainDish: string[], sideDish: string[], other: string }
  dailyLife             String?  @map("daily_life")
  medicationTaken       Boolean? @map("medication_taken")
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt      @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("health_records")
}

model FamilyMember {
  id           String   @id @default(cuid())
  userId       String
  name         String
  email        String   // ğŸ†• ãƒ¡ãƒ¼ãƒ«ã‚¢ãƒ‰ãƒ¬ã‚¹
  relationship String
  lineUserId   String?
  isRegistered Boolean  @default(false)
  linkCode     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("family_members")
  @@unique([userId, email])
  @@unique([userId, lineUserId])
  @@unique([userId, linkCode])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  category  String
  message   String
  createdAt DateTime @default(now())

  @@map("contact_messages")
}

model FamilyInvite {
  id        String   @id @default(cuid())
  patientId String
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)

  patient   User     @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@map("family_invites")
}

