model MedicalInvite {
  id         String   @id @default(cuid())
  providerId String
  patientId  String
  status     String   @default("pending") // pending | accepted | declined
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  provider User @relation("ProviderInvites", fields: [providerId], references: [id], onDelete: Cascade)
  patient  User @relation("PatientInvites", fields: [patientId], references: [id], onDelete: Cascade)

  @@unique([providerId, patientId])
  @@map("medical_invites")
}

model Profile {
  id                     String   @id @default(cuid())
  userId                 String
  displayName            String?
  age                    Int?
  gender                 String?
  height                 Float?
  targetWeight           Float?
  diseases               String[]
  riskFactors            String[]
  medications            String?
